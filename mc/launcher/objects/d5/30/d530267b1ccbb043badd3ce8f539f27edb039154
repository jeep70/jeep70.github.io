# Configuration file

lightningrod {
    # This is the T1 lightning rod. All other tiers are generated based off of this value. [range: 100000 ~ 100000000, default: 500000]
    I:perStrikeBaseRate=500000
}


solararray {
    # This is the T1 per cell rate. All other tiers are generated automatically [range: 80 ~ 8000, default: 128]
    I:perCellBaseRate=128
}


